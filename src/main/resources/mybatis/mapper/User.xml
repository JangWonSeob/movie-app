<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.website.movie.biz.dao.UserDao">

	<sql id="TABLE">user</sql>

    <!--id로 검색하여 유저 한명 데이터 검색-->
	<select id="selectOne" resultType="com.website.movie.biz.dto.UserDto">
        SELECT T1.*
        FROM <include refid="TABLE"/> T1
        WHERE 1 = 1
        <choose>
            <when test="sqlSelectType eq 'CHECK_EMAIL'">
                AND EMAIL = #{email} AND CERTIFIED = #{certified}
            </when>
            <otherwise>
               AND ID = #{id}
            </otherwise>
        </choose>
    </select>

    <!--위에 꺼가 헷갈려서 일단 만듬-->
    <select id="selectUser" parameterType="int" resultType="com.website.movie.biz.dto.UserDto">
        SELECT * FROM user WHERE ID = #{id}
    </select>

    <!--email로 유저를 찾아냅니다.-->
    <select id="findByEmail" parameterType="String" resultType="com.website.movie.biz.dto.UserDto">
        SELECT * FROM user WHERE EMAIL = #{email}
    </select>

    <select id="selectAuthority" parameterType="int" resultType="String">
        SELECT AUTHORITY_NAME FROM authority WHERE ID = #{id}
    </select>

    <select id="selectAuthorityByEmail" parameterType="String" resultType="String">
        SELECT AUTHORITY_NAME FROM authority WHERE EMAIL = #{email}
    </select>

    <!--다음에 들어올 ID autoincrement 값을 가져옵니다.-->
    <select id="selectNextId" resultType="int">
        SELECT AUTO_INCREMENT
        FROM information_schema.tables
        WHERE table_name = 'user'
          AND table_schema = DATABASE();
    </select>

    <!--회원가입-->
    <insert id="createUser">
        INSERT INTO user(EMAIL,NAME,NICKNAME,PASSWORD,REG_DT) VALUES(#{email}, #{name}, #{nickname}, #{password}, NOW())
    </insert>

    <!--권한부여-->
    <insert id="createAuthority"
            parameterType="org.springframework.security.core.GrantedAuthority">
        INSERT INTO authority(ID, AUTHORITY_NAME, EMAIL,REG_DT)
        VALUES
        <foreach item="item" collection="authorities" separator=",">
            ((SELECT AUTO_INCREMENT
            FROM information_schema.tables
            WHERE table_name = 'user'
            AND table_schema = DATABASE())-1, #{item.authority}, #{email},NOW())
        </foreach>
    </insert>

    <update id="update">
        UPDATE INTO user(NAME,NICKNAME,PASSWORD,UPD_DT) VALUES(#{name}, #{nickname}, #{password}, NOW())
    </update>

    <!--회원삭제-->
    <update id="delete">
        UPDATE FROM user
        SET DEL_DT = NOW()
        , DEL_ID = #{id}
        , DEL_YN = 1
        WHERE id = #{id}
    </update>

    <delete id="deleteAuthority" parameterType="int">
        DELETE FROM authority WHERE ID = #{id}
    </delete>

    <select id="getById" parameterType="int" resultType="com.website.movie.biz.dto.UserDto">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="email_certified_check" parameterType="com.website.movie.biz.dto.UserDto" resultType="com.website.movie.biz.dto.UserDto">
        SELECT EMAIL FROM user where EMAIL = #{email} and CERTIFIED = #{certified}
    </select>

    <update id="email_certified_update" parameterType="com.website.movie.biz.dto.UserDto">
        UPDATE user SET CERTIFIED = 'Y' WHERE EMAIL = #{email}
    </update>



</mapper>