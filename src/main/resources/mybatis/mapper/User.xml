<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.website.movie.biz.dao.UserDao">

	<sql id="TABLE">user</sql>

    <!--id로 검색하여 유저 한명 데이터 검색-->
	<select id="selectOne" resultType="com.website.movie.biz.dto.UserDto">
        SELECT T1.*
        FROM <include refid="TABLE"/> T1
        WHERE 1 = 1
        <choose>
            <when test="sqlSelectType eq 'CHECK_EMAIL'">
                AND EMAIL = #{email} AND CERTIFIED = #{certified}
            </when>
            <otherwise>
               AND ID = #{id}
            </otherwise>
        </choose>
    </select>

    <select id="selectUser" parameterType="int" resultType="com.website.movie.biz.dto.UserDto">
        SELECT * FROM <include refid="TABLE"/> WHERE ID = #{id}
    </select>

    <!--email로 유저를 찾아냅니다. 고유키는 아니기 때문에 일단 LIMIT 1을 주었씁니다.-->
    <select id="selectByEmail" parameterType="String" resultType="com.website.movie.biz.dto.UserDto">
        SELECT * FROM <include refid="TABLE"/> WHERE EMAIL = #{email} LIMIT 1;
    </select>

    <select id="selectById" parameterType="int" resultType="com.website.movie.biz.dto.UserDto">
        SELECT * FROM <include refid="TABLE"/> WHERE id = #{id}
    </select>


    <select id="selectAuthority" parameterType="int" resultType="String">
        SELECT AUTHORITY_NAME FROM authority WHERE ID = #{id}
    </select>

    <select id="selectAuthorityByEmail" parameterType="String" resultType="String">
        SELECT AUTHORITY_NAME FROM authority WHERE EMAIL = #{email}
    </select>

    <!--다음에 들어올 ID autoincrement 값을 가져옵니다.-->
    <select id="selectNextId" resultType="int">
        SELECT AUTO_INCREMENT
        FROM information_schema.tables
        WHERE table_name = 'user'
          AND table_schema = DATABASE();
    </select>

    <!--회원가입-->
    <insert id="insertUser">
        INSERT INTO <include refid="TABLE"/>
        (
            EMAIL
            ,NAME
            ,NICKNAME
            ,PASSWORD
            ,REG_DT
        )
        VALUES
        (
            #{email}
            , #{name}
            , #{nickname}
            , #{password}
            , NOW()
        )
    </insert>

    <!--권한부여-->
    <insert id="createAuthority"
            parameterType="org.springframework.security.core.GrantedAuthority">
        INSERT INTO authority(ID, AUTHORITY_NAME, EMAIL,REG_DT)
        VALUES
        <foreach item="item" collection="authorities" separator=",">
            ((SELECT AUTO_INCREMENT
            FROM information_schema.tables
            WHERE table_name = 'user'
            AND table_schema = DATABASE()) -1, #{item.authority}, #{email},NOW())
        </foreach>
    </insert>

    <update id="update">
        UPDATE INTO <include refid="TABLE"/>(NAME,NICKNAME,PASSWORD,UPD_DT) VALUES(#{name}, #{nickname}, #{password}, NOW())
    </update>

    <!--회원삭제-->
    <update id="delete">
        UPDATE FROM <include refid="TABLE"/>
        SET DEL_DT = NOW()
        , DEL_ID = #{id}
        , DEL_YN = 1
        WHERE id = #{id}
    </update>

    <select id="emailCertifiedCheck" parameterType="com.website.movie.biz.dto.UserDto" resultType="com.website.movie.biz.dto.UserDto">
        SELECT EMAIL FROM <include refid="TABLE"/> where EMAIL = #{email} and CERTIFIED = #{certified}
    </select>

    <update id="emailCertifiedUpdate" parameterType="com.website.movie.biz.dto.UserDto">
        UPDATE <include refid="TABLE"/> SET CERTIFIED = 'Y' WHERE EMAIL = #{email}
    </update>



</mapper>