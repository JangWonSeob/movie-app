<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.website.movie.biz.dao.UnlikesDao">

	<sql id="TABLE">unlikes</sql>

    <select id="selectMyLike" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM <include refid="TABLE"/> T1
        WHERE T1.BOARD_ID = ${boardId} AND T1.USER_ID = ${loginUserId}
    </select>

    <select id="selectListCount" resultType="int">
        SELECT COUNT(*)
        FROM <include refid="TABLE"/> T1
        WHERE T1.BOARD_ID = ${boardId}
    </select>

    <select id="selectOne" resultType="com.website.movie.biz.dto.UnlikesDto">
        SELECT T1.*
        FROM <include refid="TABLE"/> T1
        WHERE T1.BOARD_ID = ${boardId} AND T1.USER_ID = ${loginUserId}
        LIMIT 1
    </select>

    <select id="selectOneByBoardIdAndUserID" resultType="com.website.movie.biz.dto.UnlikesDto">
        SELECT T1.*
        FROM <include refid="TABLE"/> T1
        WHERE T1.BOARD_ID = ${boardId} AND T1.USER_ID = ${loginUserId}
        ORDER BY ID DESC
        LIMIT 1
    </select>

    <insert id="insert">
        INSERT INTO <include refid="TABLE"/>
        (
             USER_ID
             , BOARD_ID
        )
        VALUES
        (
             #{loginUserId}
             , #{boardId}
        )
    </insert>

    <delete id="delete">
        DELETE
        FROM <include refid="TABLE"/>
        WHERE ID = #{id}
        AND USER_ID = #{loginUserId}
    </delete>

</mapper>